{{!
    @template local_soccerteam/form

    Example context (json):
    {
        "userselector": [
            {"value": 2, "label": "John Smith"},
            {"value": 3, "label": "Jane Doe"}
        ],
        "positionselector": [
            {"value": "Goalkeeper", "label": "Goalkeeper"},
            {"value": "Defender", "label": "Defender"}
        ],
        "numberselector": [
            {"value": 1, "label": "1"},
            {"value": 2, "label": "2"}
        ]
    }
}}

<div class="mform" id="soccerteam">
    <div class="fcontainer">
        <h2 class="mb-4">Soccer team</h2>

        <form id="soccerteam-form" class="mform">
            <input type="hidden" id="courseid" name="courseid" value="{{courseid}}">
            
            <div class="form-group row fitem">
                <div class="col-md-3">
                    <label for="userid">Player</label>
                    <span class="text-danger ml-1">{{#pix}}req, core, {{/pix}}</span>
                </div>
                <div class="col-md-9 form-inline felement">
                    <select id="userid" name="userid" class="custom-select" required>
                        <option value="">{{#str}}choosedots{{/str}}</option>
                        {{#userselector}}
                            <option value="{{value}}">{{label}}</option>
                        {{/userselector}}
                    </select>
                </div>
            </div>

            <div class="form-group row fitem">
                <div class="col-md-3">
                    <label for="position">Position</label>
                    <span class="text-danger ml-1">{{#pix}}req, core, {{/pix}}</span>
                </div>
                <div class="col-md-9 form-inline felement">
                    <select id="position" name="position" class="custom-select" required>
                        <option value="">{{#str}}choosedots{{/str}}</option>
                        {{#positionselector}}
                            <option value="{{value}}" title="{{description}}">{{label}}</option>
                        {{/positionselector}}
                    </select>
                </div>
            </div>

            <div class="form-group row fitem">
                <div class="col-md-3">
                    <label for="jerseynumber">Jersey number</label>
                    <span class="text-danger ml-1">{{#pix}}req, core, {{/pix}}</span>
                </div>
                <div class="col-md-9 form-inline felement">
                    <select id="jerseynumber" name="jerseynumber" class="custom-select" required>
                        <option value="">{{#str}}choosedots{{/str}}</option>
                        {{#numberselector}}
                            <option value="{{value}}">{{label}}</option>
                        {{/numberselector}}
                    </select>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-9 offset-md-3">
                    <button type="submit" class="btn btn-primary">Submit</button>
                    <button type="button" class="btn btn-secondary" id="cancel-btn">Cancel</button>
                </div>
            </div>
            
            <div class="form-group row">
                <div class="col-md-12">
                    <div id="status-message" class="alert mt-3" style="display: none;"></div>
                    <span class="text-danger">{{#pix}}req, core, {{/pix}} Required</span>
                </div>
            </div>
        </form>
    </div>
</div>
