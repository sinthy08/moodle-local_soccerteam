{{!
    @template local_soccerteam/form

    Example context (json):
    {
        "userselector": [
            {"value": 2, "label": "John Smith"},
            {"value": 3, "label": "Jane Doe"}
        ],
        "positionselector": [
            {"value": "Goalkeeper", "label": "Goalkeeper"},
            {"value": "Defender", "label": "Defender"}
        ],
        "numberselector": [
            {"value": 1, "label": "1"},
            {"value": 2, "label": "2"}
        ]
    }
}}

<div class="container mt-4" id="soccerteam">
    <h3>{{#str}}soccerteam, local_soccerteam{{/str}}</h3>

    <form id="soccerteam-form" class="form-inline">
        <input type="hidden" id="courseid" name="courseid" value="{{courseid}}">
        
        <!-- Player -->
        <div class="form-group mb-3">
            <label for="userid" class="form-label">{{#str}}player, local_soccerteam{{/str}}</label>
            <select id="userid" name="userid" class="form-select" required>
                <option value="">{{#str}}choosedots{{/str}}</option>
                {{#userselector}}
                    <option value="{{value}}">{{label}}</option>
                {{/userselector}}
            </select>
        </div>

        <!-- Position -->
        <div class="form-group mb-3">
            <label for="position" class="form-label">{{#str}}position, local_soccerteam{{/str}}</label>
            <select id="position" name="position" class="form-select" required>
                <option value="">{{#str}}choosedots{{/str}}</option>
                {{#positionselector}}
                    <option value="{{value}}">{{label}}</option>
                {{/positionselector}}
            </select>
        </div>

        <!-- Jersey Number -->
        <div class="form-group mb-3">
            <label for="jerseynumber" class="form-label">{{#str}}jerseynumber, local_soccerteam{{/str}}</label>
            <select id="jerseynumber" name="jerseynumber" class="form-select" required>
                <option value="">{{#str}}choosedots{{/str}}</option>
                {{#numberselector}}
                    <option value="{{value}}">{{label}}</option>
                {{/numberselector}}
            </select>
        </div>

        <!-- Buttons -->
        <div class="mt-3">
            <button type="submit" class="btn btn-primary me-2">{{#str}}submit, local_soccerteam{{/str}}</button>
            <button type="button" class="btn btn-secondary" id="cancel-btn">{{#str}}cancel, local_soccerteam{{/str}}</button>
        </div>
        
        <!-- Status message -->
        <div id="status-message" class="alert mt-3" style="display: none;"></div>
    </form>
</div>
